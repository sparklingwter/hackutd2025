rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && request.auth.token.role == 'admin';
    }
    
    // Public vehicle data (read-only for all, write for admins)
    match /vehicles/{vehicleId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Public metadata (read-only for all, write for admins)
    match /metadata/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // User profiles (owner only)
    match /userProfiles/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Dealer leads (create by authenticated users, read by admins only)
    match /dealerLeads/{leadId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.consent == true
        && request.resource.data.keys().hasAll(['userId', 'vehicleIds', 'contactInfo', 'consent', 'zipCode']);
      allow update, delete: if false; // Immutable
    }
    
    // Anonymous sessions (unauthenticated users only)
    match /anonymousSessions/{sessionId} {
      allow read, write: if request.auth == null;
    }
  }
}
